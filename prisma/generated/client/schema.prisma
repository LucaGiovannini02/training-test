generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model TRichieste {
  RichiestaID              Int      @id @unique @default(autoincrement())
  CognomeNomeRichiedente   String   @unique
  DataInserimentoRichiesta DateTime @default(now())
  Importo                  Int
  NumeroRate               Int
}
